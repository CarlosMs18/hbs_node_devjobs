
<main class="contenedor">
    <form action="/auth/signin" method="POST" class="default-form">
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" placeholder="Tu email">
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu password" >
        </div>
        <div class="campo acciones">
            <a href="/auth/signup">Crea una cuenta</a>
            <a href="/auth/forgorpassword">Olvide mi password</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar Sesion" class='btn btn-azul'>
        </div>
    </form>
</main>